   {{!-- Header --}}
  <div class="row" id="headercont">
    <div class="col-md-6">
     <img src="/assets/img/burger.png" id="burgerimg">
      <h2>Eat Da Burger</h2>
    </div>
  </div>
            


  {{!-- Burger columns --}}
<div class="row justify-content-center">
    <div class="col-4">
       <ol class="notdevouredlist">
        {{#each burgers}}
          {{#unless devoured}}
            <li>
              {{burger_name}}
	          </li> 
              <button class="devour" data-id="{{id}}"> Devour Burger!</button>
          {{/unless}}
        {{/each}}
      </ol></div>
    <div class="col-4">
     <ol class="devouredlist">
        {{#each burgers}}
          {{#if devoured}}
           <li id="devouredlist">
              {{burger_name}}
	          </li> 
          {{/if}}
        {{/each}}
      </ol>
    </div>
  </div>
  <div class="row" id="headercont">
    <div class="col-md-6">
     <form class="create-form">
      <div class="form-group">
        <label for="bu">Enter a burger to devour</label>
        <input type="text" id="bu" name="name">
      </div>
      <button type="submit">Add Burger</button>
    </form>
    </div>
  </div>
     
