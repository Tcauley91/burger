   {{!-- Header --}}
  <div class="row" id="headercont">
    <div class="col-md-6">
      <img src="../public/assets/img/burger.png">
      <h2>Eat Da Burger</h2>
    </div>
  </div>
            


  {{!-- Burger columns --}}
<div class="row justify-content-center">
    <div class="col-4">
       <ol>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devour=true}}
          {{/unless}}
        {{/each}}
      </ol></div>
    <div class="col-4">
     <ol>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devour=false}}
          {{/if}}
        {{/each}}
      </ol>
    </div>
  </div>

    
 
  <div class="row" id="headercont">
    <div class="col-md-6">
     <form class="create-form">
      <div class="form-group">
        <label for="bu">Enter a burger to devour</label>
        <input type="text" id="bu" name="name">
      </div>
      <button type="submit">Add Burger</button>
    </form>
    </div>
  </div>
     
